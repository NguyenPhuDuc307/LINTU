@model LessonCreateViewModel
@{
    ViewData["Title"] = "Edit Lesson";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0 text-primary">
                        <i class="feather icon-edit me-2"></i>Edit Lesson
                    </h5>
                    <p class="text-muted mb-0">Update lesson information</p>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ClassRoomId" />

                        <div class="mb-3">
                            <label asp-for="Title" class="form-label">Lesson Title</label>
                            <input asp-for="Title" class="form-control" placeholder="Enter lesson title" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                            <div class="form-text">Give your lesson a clear and descriptive title</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description (Optional)</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter lesson description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="form-text">Briefly describe what students will learn in this lesson</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Order" class="form-label">Display Order</label>
                            <input asp-for="Order" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Order" class="text-danger"></span>
                            <div class="form-text">Set the order in which this lesson appears in your course</div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-route-classRoomId="@Model.ClassRoomId" class="btn btn-outline-secondary">
                                <i class="feather icon-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="feather icon-save me-2"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
