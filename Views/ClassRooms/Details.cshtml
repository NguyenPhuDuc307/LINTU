                        errorMessage = xhr.responseJSON.message;
                    }
                    showToast(errorMessage, "error");
                },
                complete: function() {
                    // Khôi phục nút
                    createButton.html(originalButtonText);
                    createButton.prop('disabled', false);
                }
            });
        }

