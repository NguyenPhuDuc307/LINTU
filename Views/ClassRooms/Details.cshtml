            if (!lessonId) {
                alert("Vui lòng chọn bài học.");
                return;
            }

            if (!title) {
                alert("Vui lòng nhập tiêu đề bài giảng.");
                return;
            }

            // Kiểm tra loại nội dung
            if (contentType === '0') { // VideoUrl
                if (!videoUrl) {
                    alert("Vui lòng nhập URL video.");
                    return;
                }
            } else if (contentType === '2') { // TextContent
