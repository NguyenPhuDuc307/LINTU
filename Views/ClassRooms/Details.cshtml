                    alert("Vui lòng nhập nội dung bài giảng.");
                    return;
                }
            }

            // Hiển thị loading
            var createButton = $('#lectureForm button[type="button"].btn-primary');
            var originalButtonText = createButton.html();
            createButton.html('<i class="fas fa-spinner fa-spin me-2"></i>Đang xử lý...');
            createButton.prop('disabled', true);

            // Tạo FormData để gửi dữ liệu (bao gồm cả file nếu có)
            var formData = new FormData();
            formData.append('Title', title);
            formData.append('Description', description);
            formData.append('LessonId', lessonId);
            formData.append('ClassRoomId', classRoomId);
            formData.append('ContentType', contentType);
            formData.append('VideoUrl', videoUrl);
            formData.append('TextContent', textContent);
            formData.append('DurationMinutes', durationMinutes);
            formData.append('Order', order);
            formData.append('__RequestVerificationToken', $('input[name="__RequestVerificationToken"]').val());

            // Thêm file nếu có
            if (contentType === '1' && $('#uploadedFile')[0].files[0]) { // UploadedFile
                formData.append('UploadedFile', $('#uploadedFile')[0].files[0]);
            }

            // Gửi dữ liệu qua AJAX
            $.ajax({
                url: '@Url.Action("Create", "Lectures")',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function (result) {
